<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/app_main_nav_color"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/function_city"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_choose_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="东莞市"
                android:textColor="@color/color_white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="100"
            android:text="美缝大师"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/function_product_list"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="50dp"> <!-- android:background="@drawable/ease_common_tab_bg" -->

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/icon_goods" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/function_me"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"> <!-- android:background="@drawable/ease_common_tab_bg" -->

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/icon_account" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="46dp"
        android:background="@color/app_main_nav_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_top_menu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="46dp"
            android:fitsSystemWindows="false"
            app:tabBackground="@color/app_main_nav_color"
            app:tabGravity="fill"
            app:tabMaxWidth="0dp"
            app:tabSelectedTextColor="#04b4ae"
            app:tabTextColor="@android:color/white" />
    </RelativeLayout>

    <meifeng.mobile.kevin.com.meifeng.ext.view.CustomViewPager
        android:id="@+id/vp_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="86dp" />

    <View
        android:id="@+id/view_full_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="#000"
        android:visibility="visible" />

</RelativeLayout>