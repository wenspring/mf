<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".mvp.main.shoppingMall.view.SearchProductActivity"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="59dp"
            android:background="@drawable/corner_bg_edit_text"
            android:hint="搜索商品"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:textColorHint="@color/font_color_999"
            android:imeOptions="actionSearch"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/icon_cancel_search" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="46dp">

        <TextView
            android:id="@+id/tv_label_history"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:text="搜索历史"
            android:gravity="center_vertical"
            android:textSize="12dp"
            android:textColor="@color/font_color_333"/>
    </LinearLayout>
</RelativeLayout>