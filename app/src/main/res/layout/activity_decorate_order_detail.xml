<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_bg"
    tools:context="meifeng.mobile.kevin.com.meifeng.mvp.main.home.view.fragment.DecorateOrderDetailActivity">


    <meifeng.mobile.kevin.com.meifeng.ext.toolbar.ToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:function_enable="false"
        app:title_name="装修详情" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="51dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_create_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/font_color_333"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/font_color_999"
            android:textSize="12dp"
            android:textStyle="italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:alpha="0.2"
            android:background="@color/font_color_999" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/font_color_333"
                android:textSize="14dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/font_color_666"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_done_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="要求完成日期 : -"
            android:textColor="@color/font_color_999"
            android:textSize="12dp" />

        <WebView
            android:id="@+id/wv_location"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="地点:-"
            android:textColor="@color/font_color_666"
            android:textSize="12dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="¥ 0.00"
            android:textColor="@color/actionsheet_red"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_control"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="30dp"
            android:background="@color/btn_bg_color"
            android:text="立即抢单"
            android:textColor="@color/color_white"
            android:textSize="13dp" />

    </LinearLayout>

</RelativeLayout>
